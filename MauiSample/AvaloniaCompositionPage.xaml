<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maui="clr-namespace:Avalonia.Maui.Controls;assembly=Avalonia.Maui"
             x:Class="MauiSample.AvaloniaCompositionPage"
             xmlns:avalonia="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls"
             xmlns:view="clr-namespace:MauiSample.Avalonia.Views"
             Title="AvaloniaCompositionPage">
    <Grid  HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
        <maui:AvaloniaView HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <avalonia:ScrollViewer HorizontalAlignment="Stretch"  VerticalAlignment="Stretch">
                <avalonia:ScrollViewer.Content>
                    <view:CompositionPage HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"/>
                </avalonia:ScrollViewer.Content>             
            </avalonia:ScrollViewer>
        </maui:AvaloniaView>
    </Grid>
</ContentPage>